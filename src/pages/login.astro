---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
    <main class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl">
        <section>
            <h3 class="font-bold text-2xl text-center">Welcome Back!</h3>
            <h3 class="font-bold text-2xl text-center">Sign in to Continue!</h3>
        </section>

        <section class="mt-10">
            <form class="flex flex-col" method="POST" action="#">
                <button
    class="px-4 py-2 border flex gap-2 border-slate-200 rounded-lg text-slate-700 hover:border-slate-400 hover:text-slate-900 hover:shadow transition duration-150">
    <img class="w-6 h-6" src="https://www.svgrepo.com/show/475656/google-color.svg" loading="lazy" alt="google logo">
    <span class="px-10">Login with Google</span>
</button>
<p class="text-center mt-4 text-gray-600 text-1xl">or</p>
                <div class="mb-6 pt-2 rounded bg-transparent">
                    <label class="block text-gray-700 text-sm font-bold" for="email">Username</label>
                    <input type="text" id="email" class="bg-transparent rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-blue-600 transition duration-500 ">
                </div>
                <div class="mb-6 pt-3 rounded bg-transparent">
                    <label class="block text-gray-700 text-sm font-bold" for="password">Password</label>
                    <input type="password" id="password" class="bg-transparent rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-blue-600 transition duration-500 ">
                </div>
                <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200" formaction="index.html">Log in</button>
                <button class="bg-transparent hover text-blue-600 font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200" formaction="reset.html">Forgot Password</button>
            </form>
        </section>
    </main>

    <div class="max-w-lg mx-auto text-center mt-12 mb-6">
        <p class="text-white">Don't have an account? <a href="signup.html" class="font-bold hover:underline">Sign up</a>.</p>
    </div>

    <footer class="max-w-lg mx-auto flex justify-center text-white">
        <a href="#" class="hover:underline">Contact</a>
        <span class="mx-3">â€¢</span>
        <a href="#" class="hover:underline">Privacy</a>
    </footer>
</Layout>